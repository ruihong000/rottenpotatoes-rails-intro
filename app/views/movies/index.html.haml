-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh'
%table#movies
  %thead
    %tr
      %th{:class=>("hilite" if params[:sort]=="title")}= link_to 'Movie Title', movies_path(:sort => "title"), :id=>'title_header'
      //Movie Title
      %th Ratings
      %th{:class=>("hilite" if params[:sort]=="release_date")}= link_to 'Release Date', movies_path(:sort => "release_date") , :id=>'release_date_header'
      //= button_to 'Release Date', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
      //link_to "Release Date", @movies.sort_by do |p|; p[:Release_Date]; end
      
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
